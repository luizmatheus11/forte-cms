{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nome": {
      "type": "string",
      "required": true
    },
    "preco": {
      "type": "decimal",
      "required": true
    },
    "publicado": {
      "type": "boolean",
      "default": false
    },
    "imagembanner": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imagens": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "estoque": {
      "type": "integer",
      "required": true
    },
    "descricao": {
      "type": "richtext",
      "required": true
    },
    "categoria": {
      "type": "enumeration",
      "enum": [
        "apple",
        "samsung",
        "xiaomi"
      ]
    }
  }
}
